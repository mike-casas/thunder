<div class="text-center devisenew">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , role:"form"}) do |f| %>
<div class="errores">  <%= devise_error_messages! %>
    </div>
        <div class="form-group">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %>
    </div>
  <div><%= f.submit "Send me reset password instructions",class:"btn btn-primary" %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>